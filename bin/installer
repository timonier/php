#!/bin/bash
set -e -u -x
cd "$(dirname "$0")"

# Check environment

_fail() {
    echo 1>&2 "$1"
    echo 1>&2 "Usage: $(basename "$0") [install|uninstall]"
    exit 255
}

if [ "$#" -lt 1 ]; then
    _fail "Invalid number of arguments."
fi

# Run installer

INSTALL_DIRECTORY="${INSTALL_DIRECTORY:-/usr/local/bin}"

case "$1" in
    install)
        mkdir -p "${INSTALL_DIRECTORY}"

        if [ -t 0 ]; then
            cp cmd "${INSTALL_DIRECTORY}"/composer
            cp cmd "${INSTALL_DIRECTORY}"/melody
            cp cmd "${INSTALL_DIRECTORY}"/php
            cp cmd "${INSTALL_DIRECTORY}"/php-cs-fixer
        else
            curl --location --output "${INSTALL_DIRECTORY}"/composer "https://gitlab.com/timonier/php/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/melody "https://gitlab.com/timonier/php/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/php "https://gitlab.com/timonier/php/raw/master/bin/cmd"
            curl --location --output "${INSTALL_DIRECTORY}"/php-cs-fixer "https://gitlab.com/timonier/php/raw/master/bin/cmd"
        fi

        chmod +x "${INSTALL_DIRECTORY}"/composer "${INSTALL_DIRECTORY}"/melody "${INSTALL_DIRECTORY}"/php "${INSTALL_DIRECTORY}"/php-cs-fixer
        ;;

    uninstall)
        rm -f "${INSTALL_DIRECTORY}"/composer "${INSTALL_DIRECTORY}"/melody "${INSTALL_DIRECTORY}"/php "${INSTALL_DIRECTORY}"/php-cs-fixer
        ;;

    *)
        _fail "Argument \"$1\" is invalid."
        ;;
esac
